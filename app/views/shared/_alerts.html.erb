<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], title: "Alfredo CM Portfolio!", sticky: false) %>
<% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], title: "Alfredo CM Portfolio!", sticky: false, time: 8000) %>
<% else flash[:notice] %>
    <%= js add_gritter(flash[:notice], title: "Alfredo CM Portfolio!", sticky: false) %>
<% end %>