<div class="app-card-container">
    <div class="card">
        <h1>About Me</h1>

        <hr>

        <div class="row">
            <div class="col-md-4">
                <%= image_tag "alfredo.jpg", width:300, alt: "Profile image", class: "profile-img" %>

                <div class="skills">
                    <% @skills.each do |skill| %>
                        <div class="skill">
                            <h4><%= skill.title %></h4>
                            <div class="progress">
                                <div 
                                    class="progress-bar progress-bar-striped bg-warning"
                                    role="progress-bar"
                                    aria-valuenow="<%= skill.percent_utilized %>"
                                    aria-valuemax="100"
                                    style="width: <%= skill.percent_utilized%>%">
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>

            <div class="col-md-8">
                <p>Im a 24 YO passionate Jr software developer </p>


                <p>
                    <button
                        class="btn btn-primary"
                        type="button"
                        data-toggle="collapse"
                        data-target="#jobHistory"
                        aria-expanded="false"
                        aria-controller="jobHistory"
                    >
                        Job History
                    </button>

                    <button
                        class="btn btn-primary"
                        type="button"
                        data-toggle="collapse"
                        data-target="#educationHistory"
                        aria-expanded="false"
                        aria-controller="educationHistory"
                    >
                        Education
                    </button>
                </p>

                <p>
                    <div class="collapse" id="jobHistory">
                        <div class="card card-block">
                            Jobssssssssss 1
                        </div>
                        <div class="card card-block">
                            Jobssssssssss 2
                        </div>
                        <div class="card card-block">
                            Jobssssssssss 3
                        </div>
                    </div>
                </p>
                <p>
                    <div class="collapse" id="educationHistory">
                        <div class="card card-block">
                            School 1
                        </div>
                        <div class="card card-block">
                            School 2
                        </div>
                        <div class="card card-block">
                            School 3
                        </div>
                    </div>
                </p>
            </div>

        </div>
    </div>
</div>